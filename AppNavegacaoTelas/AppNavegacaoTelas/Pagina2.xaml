<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNavegacaoTelas.Pagina2">
    
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout Orientation="Horizontal">
            <Label Text="Usuario: " HorizontalOptions="FillAndExpand" Style="{StaticResource Texto1}" />
            <Label Text="{Binding Usuario}" Style="{StaticResource Texto1}" TextColor="Red"/>
            <Label Text="Login Realizado com sucesso!!" HorizontalOptions="FillAndExpand" Style="{StaticResource Texto1}" />
        </StackLayout>
    
        <StackLayout Orientation="Vertical">
            <Image x:Name="ImgOK"
               Aspect="AspectFit"
               WidthRequest="300"
               HeightRequest="300" />
            <Button Text="Voltar para a Pagina de Login" Clicked="btn_clicar" />
        </StackLayout>
    </StackLayout>
   
</ContentPage>